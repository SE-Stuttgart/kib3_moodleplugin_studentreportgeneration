{{!
    @template mod_srg/table

    Report View Tab Page Content

    Example context (json):
    {
        "head": [
            { "value": "ID" },
            { "value": "timecreated" },
            { "value": "courseid" },
            { "value": "Dedication" },
            { "value": "Time" }
        ],
        "rows": [
            {
                "columns": [
                    { "value": "0" },
                    { "value": "0" },
                    { "value": "0" },
                    { "value": "10" },
                    { "value": "0" }
                ]
            }
        ]
    }
}}
<div class="table-responsive">
    <table class="table table-bordered table-striped generaltable">
        <thead>
            <tr>
                {{#head}}
                    <th scope="col">{{value}}</th>
                {{/head}}
            </tr>
        </thead>
        <tbody>
            {{#rows}}
                <tr>
                    {{#columns}}
                        <td>{{value}}</td>
                    {{/columns}}
                </tr>
            {{/rows}}
        </tbody>
    </table>
</div>